<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityUpdateSinhVien">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#FF5722"
        android:textColor="#ffff"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Cập nhật sinh viên"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imghinhupdatesv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnchuphinhupdatesv"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="170dp"
                android:layout_height="54dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/camera"
                android:text="Chụp hình"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnchonhinhupdatesv"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/folder"
                android:text="Chọn hình"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtmasvupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF5722"
            android:textStyle="italic"
            android:hint="Mã sinh viên" />

        <EditText
            android:id="@+id/edttensvupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Tên sinh viên"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spnmalopupdatesv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:scrollbarSize="4dp" />

        <EditText
            android:id="@+id/edtsdtsvupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:ems="10"
            android:hint="Số điện thoại"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtemailsvupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#673AB7"
            android:hint="Email "
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnluusvupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/hihi"
            android:hint="Lưu"
            android:text="lưu"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnquaylaisvupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#3F51B5"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:text="quay lại" />
    </LinearLayout>




</LinearLayout>
