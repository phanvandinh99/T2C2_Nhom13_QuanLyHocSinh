<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#FF5722"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Thêm sinh viên"
        android:textColor="#fff"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imghinhaddsv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/k" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnchuphinhaddsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/camera" />

            <ImageView
                android:id="@+id/btnchonhinhaddsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/folder" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtmasvadd"
            android:layout_width="match_parent"
            android:textColor="#FF5722"
            android:textStyle="italic"
            android:layout_height="wrap_content"
            android:hint="Mã sinh viên" />

        <EditText
            android:id="@+id/edttensvadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:ems="10"
            android:hint="Tên sinh viên"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtsdtsvadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:ems="10"
            android:hint="Số điện thoại"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spnmalopaddsv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:scrollbarSize="4dp" />

        <EditText
            android:id="@+id/edtemailsvadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#673AB7"
            android:hint="Email "
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnluusvadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                android:background="@drawable/hihi"
                android:text="lưu" />

            <Button
                android:id="@+id/btnnhapmoisvadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/hihi"
                android:textColor="#fff"
                android:text="nhập mới" />

            <Button
                android:id="@+id/btnquaylaisvadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/hihi"
                android:textColor="#fff"
                android:text="Xong" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>