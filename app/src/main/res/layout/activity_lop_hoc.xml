<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLopHoc">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivbacklophoc"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/logoong" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_weight="30"
            android:text="QUẢN LÝ LỚP HỌC"
            android:textColor="#FF5722"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <EditText
        android:id="@+id/edtmalop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mã lớp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edttenlop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tên lớp"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnthemlop"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FF9800"
            android:drawableLeft="@drawable/plus2"
            android:paddingLeft="10dp"
            android:text="thêm" />

        <Button

            android:id="@+id/btneditlop"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FF9800"
            android:drawableLeft="@drawable/updatelop2"
            android:paddingLeft="10dp"
            android:text="cập nhật" />
    </LinearLayout>


    <Button
        android:id="@+id/btnfromqlsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#77FF9800"
        android:text="danh sách sinh viên" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:text="STT"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="MÃ LỚP"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Ten lớp"
            android:text="TÊN LỚP"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dele" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvlophoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>